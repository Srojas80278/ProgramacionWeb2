@model SalonPrograAvanzadaWeb.Entities.UsuarioEnt

@{
    ViewData["Title"] = "RecoverAccount";
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo text-center">
                    <img src="~/lib/assets/img/salonutopialogo.jpg" alt="logo">
                </div>

                @using (Html.BeginForm("RecoverAccount", "Login", FormMethod.Post, new { @class = "pt-3" }))
                {
                    <div class="form-group">
                        <label for="Email">Correo Electrónico</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @type = "text", placeholder = "Escriba aquí..." })
                    </div>
                    <span class="error-message">@ViewBag.MensajePantalla</span>
                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="RECUPERAR">
                    </div>

                    <br> <br>
                }


                <div class="new-account mt-3">
                    <p>No tienes una cuenta? <a class="text-primary" href="@Url.Action("RegisterAccount","Login")">Registrate</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .error-message {
        color: red;
        font-weight: bold;
    }
</style>
