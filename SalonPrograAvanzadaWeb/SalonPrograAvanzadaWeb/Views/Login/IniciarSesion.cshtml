@model SalonPrograAvanzadaWeb.Entities.UsuarioEnt
@{
    ViewData["Title"] = "IniciarSesion";
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo text-center">
                    <img src="~/lib/assets/img/salonutopialogo.jpg" alt="logo">
                </div>
                <form class="pt-3" asp-action="IniciarSesion" asp-controller="Login" method="post">
                    <div class="form-group">
                        <label asp-for="Email" class="form-control-label">Correo Electrónico</label>
                        <input type="text" asp-for="Email" class="form-control form-control-lg" placeholder="Escriba aquí...">
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordUser" class="form-control-label">Contraseña</label>
                        <input type="password" asp-for="PasswordUser" class="form-control form-control-lg" placeholder="Escriba aquí...">
                    </div>
                    <span class="error-message">@ViewBag.MensajePantalla</span>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">INICIAR SESIÓN</button>
                    </div>

                    <div class="text-center mt-4 font-weight-light">
                        ¿No tienes una cuenta? <a href="@Url.Action("RegisterAccount", "Login")" class="text-primary">Registrarse</a> <br />
                        ¿Olvidaste la contraseña? <a href="@Url.Action("RecoverAccount", "Login")" class="text-primary">Recuperar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    .error-message {
        color: red;
        font-weight: bold;
    }
</style>
